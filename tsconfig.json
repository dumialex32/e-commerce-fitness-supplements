{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./backend",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types/express"]
  },
  "include": ["backend/**/*.ts"]
}
